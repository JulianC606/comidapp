 <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>
<% content_for :title, "Food restrictions" %>


<div class="flex justify-between items-center">
  <h1 class="font-bold text-4xl">Food restrictions</h1>
  <%= link_to "New food restriction", new_food_restriction_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
</div>

<div id="food_restrictions" class="min-w-full">
  <% if @food_restrictions.any? %>
    <% @food_restrictions.each do |food_restriction| %>
      <%= render food_restriction %>
      <p>
        <%= link_to "Show this food restriction", food_restriction, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
      </p>
    <% end %>
  <% else %>
    <p class="text-center my-10">No food restrictions found.</p>
  <% end %>
</div>
