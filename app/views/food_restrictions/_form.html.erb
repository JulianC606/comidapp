<%= form_with(model: food_restriction, class: 'contents') do |form| %>
  <% if food_restriction.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2>
        <%= t('errors.template.header', count: food_restriction.errors.count, model: food_restriction.class.model_name.human) %>
      </h2>

      <ul class="list-disc ml-6">
        <% food_restriction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_restriction.errors[:name].none?, "border-red-400 focus:outline-red-600": food_restriction.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :kind %>
    <%= form.text_field :kind, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_restriction.errors[:kind].none?, "border-red-400 focus:outline-red-600": food_restriction.errors[:kind].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
