<%= form_with(model: food_provider, class: 'contents') do |form| %>
  <% if food_provider.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2>
        <%= t('errors.template.header', count: food_provider.errors.count, model: food_provider.class.model_name.human) %>
      </h2>

      <ul class="list-disc ml-6">
        <% food_provider.errors.each do |error| %>
          <li><%= food_provider.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": food_provider.errors[:name].none?, "border-red-400 focus:outline-red-600": food_provider.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :default %>
    <%= form.checkbox :default, class: ["block shadow rounded-md border outline-none mt-2 h-5 w-5", {"border-gray-400 focus:outline-blue-600": food_provider.errors[:default].none?, "border-red-400 focus:outline-red-600": food_provider.errors[:default].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn" %>
  </div>
<% end %>
