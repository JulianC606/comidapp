<% content_for :title, t('helpers.titles.editing', model: @food_provider.human_class_name) %>

<div class="w-full">
  <h1 class="font-bold text-4xl text-primary-600">
    <%= t('helpers.titles.editing', model: @food_provider.human_class_name) %>
  </h1>

  <%= render "form", food_provider: @food_provider %>

  <%= link_to(
        t('helpers.anchors.show', model: @food_provider.human_class_name),
        @food_provider,
        class: "ml-2 btn alt"
      ) %>
  <%= link_to(
        t('helpers.anchors.back', model: @food_provider.human_class_name(count: 2)),
        food_providers_path,
        class: "ml-2 btn alt"
      ) %>
</div>
