<% content_for :title, t('helpers.titles.showing', model: @food_provider.human_class_name) %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl">
    <%= t('helpers.titles.showing', model: @food_provider.human_class_name) %>
  </h1>

  <%= render @food_provider %>

  <%= link_to(
        t('helpers.anchors.edit', model: @food_provider.human_class_name),
        edit_food_provider_path(@food_provider),
        class: "mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium"
      ) %>
  <%= link_to( 
        t('helpers.anchors.back', model: @food_provider.human_class_name(count: 2)),
        food_providers_path,
        class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium"
      ) %>
  <div class="inline-block ml-2">
    <%= button_to(
          t('helpers.actions.destroy', model: @food_provider.human_class_name(count: 2)),
          @food_provider,
          method: :delete,
          class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium"
        ) %>
  </div>
</div>
