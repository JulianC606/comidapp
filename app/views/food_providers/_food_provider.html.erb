<div id="<%= dom_id food_provider %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">
      <%= food_provider.class.human_attribute_name(:name) %>
    </strong>
    <%= food_provider.name %>
    <% if food_provider.default? %>
      <strong class="ms-2 py-1 px-1.5 rounded-xl bg-gray-50 text-blue-500 font-semibold text-sm">
        <%= food_provider.class.human_attribute_name(:default) %>
      </strong>
    <% end %>
  </p>
</div>
