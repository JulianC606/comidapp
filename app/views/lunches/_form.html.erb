<%= form_with(model: lunch, class: 'contents') do |form| %>
  <% if lunch.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2>
        <%= t('errors.template.header', count: lunch.errors.count, model: lunch.class.model_name.human) %>
      </h2>

      <ul class="list-disc ml-6">
        <% lunch.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :participant_id %>
  <%= form.hidden_field :user_id %>
  <%= form.hidden_field :delivered_at %>

  <div class="my-5">
    <%= form.label :name, participant.human_attribute_name(:name) %>
    <%= form.text_field :name,
                        value: participant.name,
                        class: "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full",
                        readonly: true %>
  </div>

  <div class="my-5">
    <%= form.label :food_provider_id %>
    <%= form.select :food_provider_id,
                    FoodProvider.pluck(:name, :id),
                    {},
                    class: [
                      "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600" => lunch.errors[:role].none?,
                        "border-red-400 focus:outline-red-600"  => lunch.errors[:role].any?
                      }
                    ] %>
  </div>

  <div class="my-5">
    <%= form.label :kind %>
    <%= form.select :kind,
                    Lunch.humanized_kinds,
                    {},
                    class: [
                      "block shadow rounded-md border outline-none px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600" => lunch.errors[:role].none?,
                        "border-red-400 focus:outline-red-600"  => lunch.errors[:role].any?
                      }
                    ] %>
  </div>

  <div class="inline">
    <%= form.submit class: "btn" %>
  </div>
<% end %>
