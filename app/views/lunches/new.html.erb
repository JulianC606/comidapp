<% content_for :title, t('.title') %>

<div class="w-full">
  <h1 class="font-bold text-4xl text-primary-600">
    <%= t('helpers.titles.new', model: @lunch.human_class_name) %>
  </h1>

  <%= render "form", lunch: @lunch, participant: @participant%>
  <% if Current.user.admin? %>
    <%= link_to(
        t('helpers.anchors.back', model: @lunch.human_class_name(count: 2)),
        lunches_path,
        class: "ml-2 btn alt"
      ) %>
    <% end %>
</div>
